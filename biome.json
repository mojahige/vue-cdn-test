{
  "$schema": "https://biomejs.dev/schemas/1.3.1/schema.json",
  "files": {
    "ignore": ["package-lock.json"]
  },
  "organizeImports": { "enabled": true },
  "formatter": {
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "json": {
    "formatter": {
      "indentStyle": "space"
    }
  }
}
